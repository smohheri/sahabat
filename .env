# ==============================================
# CodeIgniter Production Environment Variables
# ==============================================

# Application Environment
CI_ENV=production

# Database Configuration
db_hostname=localhost
db_username=root
db_password=
db_database=db_lksa
db_driver=mysqli

# Security
encryption_key=eacc8c112173fa61d39499cf87948656
csrf_protection=TRUE
csrf_token_name=csrf_token
csrf_cookie_name=csrf_cookie
csrf_expire=7200
csrf_regenerate=TRUE

# Session Configuration
sess_driver=files
sess_cookie_name=ci_session
sess_expiration=7200
sess_save_path=NULL
sess_match_ip=FALSE
sess_time_to_update=300
sess_regenerate_destroy=FALSE

# Cookie Configuration (use TRUE for HTTPS in production)
cookie_secure=FALSE
cookie_httponly=TRUE
cookie_samesite=Lax

# Logging Configuration
log_threshold=1
log_path=application/logs/
log_file_extension=.php
log_file_permissions=0644
log_date_format='Y-m-d H:i:s'

# Error Reporting (production = 0)
display_errors=0

# Composer Autoload
composer_autoload=FALSE

# Index File
index_page=

# Time Reference
time_reference=local

# Proxy IPs (if behind reverse proxy)
proxy_ips=

# Global XSS Filtering (optional - can affect performance)
global_xss_filtering=FALSE
